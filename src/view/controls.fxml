<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Pane fx:id="bottomPane" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ControlsController" styleClass="bottom-pane" BorderPane.alignment="CENTER">
    <BorderPane.margin>
        <Insets/>
    </BorderPane.margin>
    <GridPane hgap="32.0" prefHeight="94.0" prefWidth="1280.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="852.0" minWidth="10.0" prefWidth="801.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="445.0" minWidth="0.0" prefWidth="157.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="387.0" minWidth="10.0" prefWidth="85.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="189.0" minWidth="1.0" prefWidth="65.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
        </padding>
        <Slider fx:id="spacingSlider" blockIncrement="4.0" majorTickUnit="4.0" max="8.0" min="1.0"
                prefHeight="38.0" prefWidth="263.0" snapToTicks="true" value="1.0"
                GridPane.columnIndex="1"/>
        <CheckBox fx:id="slowCheckBox" mnemonicParsing="false" onAction="#setSlowShrink" text="Smoothing"
                  textFill="#93a1bb" GridPane.columnIndex="2">
            <font>
                <Font name="Roboto Medium" size="12.0"/>
            </font>
        </CheckBox>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#openFile" text="Open"
                GridPane.columnIndex="3">
            <font>
                <Font name="Roboto Medium" size="16.0"/>
            </font>
        </Button>
        <ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="813.0" progress="0.0"
                     GridPane.hgrow="ALWAYS"/>
    </GridPane>
</Pane>
